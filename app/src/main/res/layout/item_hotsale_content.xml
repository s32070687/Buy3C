<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_hot_sale"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_hot_sale"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:ellipsize="end"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tv_hot_sale_name"
        android:maxLines="3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_hot_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/color_cc1e05"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tv_hot_sale_price"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_hot_sale"
        android:layout_alignBottom="@+id/iv_hot_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_margin="3dp"
        android:layout_below="@+id/iv_hot_sale"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>